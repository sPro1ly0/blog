<h1>New Article</h1>

<!--form_with helper method, primary form builder for Rails-->
<!--Add articles_path helper to :url to point the form to that action, action="/articles"-->
<!--local: true will disable form_with's default to skip full page redirects on submit-->
<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>